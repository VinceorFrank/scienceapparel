# Database Configuration
MONGO_URI=mongodb://localhost:27017/ecommerce

# JWT Configuration - Enhanced security
JWT_SECRET=your-super-secret-jwt-key-here-make-it-at-least-64-characters-long-for-production-security-development-only
JWT_EXPIRES_IN=30d
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-here-make-it-at-least-64-characters-long-for-production-security
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-super-secret-session-key-here-make-it-at-least-32-characters-long

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5173

# Logging Configuration
LOG_LEVEL=info
LOG_RETENTION_DAYS=30

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# Database Connection Pooling
DB_POOL_SIZE=10
DB_BUFFER_MAX_ENTRIES=0

# Security Headers
SECURITY_HEADERS_ENABLED=true

# API Security
API_KEY_REQUIRED=false
API_KEY_HEADER=x-api-key